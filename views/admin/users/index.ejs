<%-include('../../partials/header.ejs') %>
<%-include('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <h2>Usuários/Users</h2>
    <a class="btn btn-success" href="/admin/users/create" onclick="alert()">Criar novo usuário/Create a new User</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Ações</th>
            </tr>

        </thead>
        <tbody>
            <%users.forEach(user=>{ %>
            <tr>
                <th><%=user.id%></th>
                <th><%=user.email%></th>
                <th>
                    <form style="display:inline;" method="POST" action="/users/delete" onsubmit="confirmDelete(event,this)">
                        <input type="hidden" name="id" value="<%=user.id%>">
                        <button class="btn btn-danger">Deletar Usuário/Delete User</button>
                    </form>
                </th>


            </tr>
            <%}) %>
        </tbody>
    </table>
</div>

<%-include('../../partials/footer.ejs') %>
<script>
    function confirmDelete(event, form) {
        event.preventDefault();
        let decision = confirm("Deseja realmente deletar esse usuário?");
        if (decision) {
            alert("Usuário deletedo")
            form.submit();
        } else {
            alert("Usuário não deletado")
        }
    }

</script>